{
  "manifest_version": 3,
  "name": "ResponsiBot",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Website Audit Tool"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["audit.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
